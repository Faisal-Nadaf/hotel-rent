
<% layout("listings/layouts/boilerplate") -%>
<body>
    <div class="row ">
        <div class="col-8 offset-3">
        
    <h3>LISTING  DETAILS</h3>
</div>
    <div class="card col-6 offset-3" >
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="image not found" >
    
        <div class="card-body">
          <p class="card-text">
            <b> <p><%= listing.title %></p></b>
            <p><%= listing.description %></p>
            <p>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
            <p><%= listing.location %></p>
            <p><%= listing.country %></p>
          </p>
        </div>
  

    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit ">
            <button class="btn btn-dark add-btn">
                EDIT
            </button> 
        </a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button  class="btn btn-dark add-btn">
            DELETE
        </button>
    </form>
</div>
<hr>
<h4 class="mt-3">leave a review</h4>
<form class="mb-3" method="POST" action="/listings/<%= listing._id %>/review">
<div>
    <label class="form-label" for="rating">range</label>
    <input class="form-range mt-3" type="range" min="1" max="5" name="review[rating]" id="rating">
</div>
<div>
    <label class="form-label" for="comment">comment</label>
    <textarea class="form-control mt-3" id="comment" cols="30" rows="4" name="review[comment]"></textarea>
</div>
<button class="btn btn-outline-dark mt-3">submit</button>
</form>
   </div></div>
</body>
