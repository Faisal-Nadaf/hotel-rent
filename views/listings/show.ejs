
<% layout("listings/layouts/boilerplate") -%>
<body>
    <div class="row ">
        <div class="col-8 offset-3">
        
    <h3><%= listing.title %></h3>
</div>
    <div class="card col-6 offset-3" >
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="image not found" >
    
        <div class="card-body">
          <p class="card-text">
            <p><%= listing.description %></p>
            <p>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
            <p><%= listing.location %></p>
            <p><%= listing.country %></p>
          </p>
        </div>
  

    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit ">
            <button class="btn btn-dark add-btn">
                EDIT
            </button> 
        </a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button  class="btn btn-dark add-btn">
            DELETE
        </button>
    </form>
</div>
<hr>
<h4 class="mt-3">leave a review</h4>

<form class="needs-validation" method="POST" action="/listings/<%= listing._id %>/reviews" novalidate  >
<div>
    <label class="form-label" for="rating">range</label>
    <input class="form-range mt-3" type="range"  min="1" max="5" name="review[rating]" id="rating">
</div>
<div>
    <label class="form-label" for="comment">comment</label>
    <textarea required class="form-control mt-3"    id="comment" cols="30" rows="4" name="review[comment]"></textarea>
</div>
<button class="btn btn-outline-dark mt-3">submit</button>
</form>
   <hr>
<div class=" row">
    <% for(let review of listing.review){%>
        <div class="card  col-5 ms-3 mb-3 border">
        <div class="card-body">

            <h5 class="card-title">Card title</h5>
            <p class="card-text"><%= review.comment%></p>
            <p class="card-text"><%= review.rating %>Star's</p>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
            
            </div></div>
           <%}%>
</div>
 
</div></div>

</body>



